// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  Profile Profile?
  subscriptions UserSubscription[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Profile {
  id       String   @id @default(cuid())
  name     String
  birthday String   // YYYY-MM-DD format
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String   @unique

  // Streak tracking
  currentStreak  Int      @default(0)
  longestStreak  Int      @default(0)

  // Terms acceptance
  termsAcceptedAt DateTime?

  // Subscription and trial tracking
  trialStartDate     DateTime  @default(now()) // When user registered
  trialEndDate       DateTime? // 2 weeks after registration
  hasActiveSubscription Boolean @default(false)
  subscriptionTier   String?   // 'monthly' | 'annual' | null
  subscriptionExpiry DateTime? // For testing/tracking
  revenueCatUserId   String?   // RevenueCat customer ID
  lastSubscriptionCheck DateTime? // Last time we checked RevenueCat

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  works   Work[]
  subscriptionEvents SubscriptionEvent[]

  @@map("profile")
}

// Track subscription events for audit and debugging
model SubscriptionEvent {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  eventType String   // 'trial_started' | 'trial_expired' | 'subscription_purchased' | 'subscription_renewed' | 'subscription_cancelled' | 'subscription_expired'
  eventData String?  // JSON string for additional data
  source    String   // 'revenuecat' | 'manual' | 'debug'

  createdAt DateTime @default(now())

  @@index([profileId, createdAt])
  @@map("subscription_event")
}

model Work {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String
  skipType    String?  // 'today' | 'indefinite' | null
  skipDate    String?  // YYYY-MM-DD format
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String

  achievements WorkAchievement[]

  @@map("work")
}

model WorkAchievement {
  id        String   @id @default(cuid())
  text      String
  date      String   // YYYY-MM-DD format
  createdAt DateTime @default(now())

  // Relations
  work   Work   @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId String

  @@index([workId, date])
  @@map("work_achievement")
}

// New table to track user subscriptions from RevenueCat webhooks
model UserSubscription {
  id                        String    @id @default(cuid())
  userId                    String
  user                      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  status                    String    // 'active' | 'expired' | 'grace_period' | 'billing_retry' | 'cancelled'
  entitlement               String    // e.g., 'premium'
  revenuecatAppUserId       String
  productIdentifier         String?
  store                     String?   // 'app_store' | 'play_store' | 'stripe' | 'promotional'
  expiresAt                 DateTime?
  periodType                String?   // 'normal' | 'trial' | 'intro' | 'promotional'
  purchaseDate              DateTime?
  willRenew                 Boolean   @default(false)
  billingIssuesDetectedAt   DateTime?
  unsubscribeDetectedAt     DateTime?

  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  lastWebhookReceivedAt     DateTime?

  @@unique([userId, entitlement])
  @@index([userId])
  @@index([revenuecatAppUserId])
  @@index([expiresAt])
  @@index([status])
  @@map("user_subscription")
}
